{
  "swagger": "2.0",
  "info": {
    "version": "0.0.1",
    "title": "TagChatter API",
    "contact": {
      "email": "team@tagview.com.br"
    }
  },
  "host": "tagchatter.herokuapp.com",
  "externalDocs": {
    "description": "Instruções",
    "url": "https://gitlab.com/tagview/entrevista-front-end"
  },
  "schemes": [
    "https",
    "http"
  ],
  "tags": [
    {
      "name": "user"
    },
    {
      "name": "channel"
    }
  ],
  "paths": {
    "/me": {
      "get": {
        "tags": [
          "user"
        ],
        "summary": "Retorna os dados do User autenticado",
        "responses": {
          "200": {
            "description": "Operação bem sucedida",
            "schema": {
              "$ref": "#/definitions/User"
            }
          }
        }
      }
    },
    "/users": {
      "get": {
        "tags": [
          "user"
        ],
        "summary": "Retorna uma lista com todos os Users",
        "responses": {
          "200": {
            "description": "Operação bem sucedida",
            "schema": {
              "type": "array",
              "items": {
                "$ref": "#/definitions/User"
              }
            }
          }
        }
      }
    },
    "/channels": {
      "get": {
        "tags": [
          "channel"
        ],
        "summary": "Retorna uma lista com todos os Channels",
        "responses": {
          "200": {
            "description": "Operação bem sucedida",
            "schema": {
              "type": "array",
              "items": {
                "$ref": "#/definitions/Channel"
              }
            }
          }
        }
      }
    },
    "/channels/{channelId}/messages": {
      "get": {
        "tags": [
          "channel"
        ],
        "summary": "Retorna uma lista com todas as Messages do Channel especificado, em ordem decrescente de data de criação",
        "parameters": [
          {
            "name": "channelId",
            "description": "ID do Channel",
            "in": "path",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "Operação bem sucedida",
            "schema": {
              "type": "array",
              "items": {
                "$ref": "#/definitions/Message"
              }
            }
          },
          "404": {
            "$ref": "#/responses/NotFoundError"
          }
        }
      },
      "post": {
        "tags": [
          "channel"
        ],
        "summary": "Envia uma Message para o Channel especificado",
        "parameters": [
          {
            "name": "channelId",
            "description": "ID do Channel",
            "in": "path",
            "required": true,
            "type": "string"
          },
          {
            "name": "body",
            "in": "body",
            "schema": {
              "type": "object",
              "properties": {
                "message": {
                  "type": "string",
                  "description": "A mensagem a ser enviada"
                },
                "author_id": {
                  "type": "string",
                  "description": "O ID do User autor da mensagem"
                }
              },
              "example": {
                "message": "Hello World!",
                "author_id": "us3r"
              },
              "required": [
                "message",
                "author_id"
              ]
            },
            "required": true
          }
        ],
        "responses": {
          "200": {
            "description": "Operação bem sucedida",
            "schema": {
              "$ref": "#/definitions/Message"
            }
          },
          "400": {
            "$ref": "#/responses/MissingPropertyError"
          },
          "404": {
            "$ref": "#/responses/NotFoundError"
          }
        }
      }
    }
  },
  "responses": {
    "UserNotFoundError": {
      "description": "O User informado não existe",
      "schema": {
        "example": {
          "type": "user_not_found",
          "error": "User not found",
          "user": "invalid_id"
        },
        "allOf": [
          {
            "$ref": "#/definitions/ResponseError"
          },
          {
            "type": "object",
            "properties": {
              "type": {
                "type": "string",
                "enum": [
                  "user_not_found"
                ]
              },
              "user": {
                "description": "ID do User não encontrado",
                "type": "string"
              }
            },
            "required": [
              "user"
            ]
          }
        ]
      }
    },
    "NotFoundError": {
      "description": "Não encontrado",
      "schema": {
        "example": {
          "type": "channel_not_found",
          "error": "Channel not found"
        },
        "allOf": [
          {
            "$ref": "#/definitions/ResponseError"
          },
          {
            "type": "object",
            "properties": {
              "type": {
                "type": "string",
                "enum": [
                  "channel_not_found",
                  "user_not_found"
                ]
              }
            }
          }
        ]
      }
    },
    "MissingPropertyError": {
      "description": "Um parâmetro requerido não foi informado",
      "schema": {
        "example": {
          "type": "missing_property",
          "error": "Property \"message\" is required",
          "properties": [
            "message"
          ]
        },
        "allOf": [
          {
            "$ref": "#/definitions/ResponseError"
          },
          {
            "type": "object",
            "properties": {
              "type": {
                "type": "string",
                "enum": [
                  "missing_property"
                ]
              },
              "properties": {
                "description": "Nome das propriedades que são requeridas mas estão ausentes",
                "type": "array",
                "items": {
                  "type": "string"
                }
              }
            },
            "required": [
              "properties"
            ]
          }
        ]
      }
    }
  },
  "definitions": {
    "User": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string"
        },
        "name": {
          "type": "string"
        },
        "avatar": {
          "type": "string",
          "description": "O URL da foto do usuário"
        }
      },
      "required": [
        "id",
        "name",
        "avatar"
      ],
      "example": {
        "id": "us3r",
        "name": "John Doe",
        "avatar": "https://example.com/us3r.jpg"
      }
    },
    "Channel": {
      "description": "Um grupo de Users",
      "type": "object",
      "properties": {
        "id": {
          "type": "string"
        },
        "name": {
          "type": "string"
        }
      },
      "required": [
        "id",
        "name"
      ],
      "example": {
        "id": "ch4nn3l",
        "name": "VIP"
      }
    },
    "Message": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string"
        },
        "content": {
          "type": "string"
        },
        "created_at": {
          "type": "string",
          "description": "A data de criação da mensagem no formato ISO 8601"
        },
        "author": {
          "$ref": "#/definitions/User"
        }
      },
      "required": [
        "id",
        "content",
        "created_at"
      ],
      "example": {
        "id": "m3ss4g3",
        "content": "Lorem ipsum dolor sit amet, consectetur adipiscing elit",
        "created_at": "2017-10-17T12:09:07.997Z"
      }
    },
    "ResponseError": {
      "description": "Estrutura básica de todos os erros",
      "type": "object",
      "properties": {
        "type": {
          "description": "O identificador do erro",
          "type": "string",
          "enum": [
            "channel_not_found",
            "user_not_found",
            "missing_property"
          ]
        },
        "error": {
          "type": "string",
          "description": "Uma descrição breve do erro"
        }
      },
      "required": [
        "type",
        "error"
      ]
    }
  }
}